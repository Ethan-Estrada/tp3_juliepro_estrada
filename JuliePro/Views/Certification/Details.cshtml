@model JuliePro_DataModels.Certification

@{
    ViewData["Title"] = @Locals["Details"];
}

<h1>@Locals["Details"]</h1>

<div>
    <h4>@Locals["Certification"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CertificationCenter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CertificationCenter)
        </dd> <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerCertification)
        </dt>
        <dd class = "col-sm-10">
            @foreach (var trainer in @Model.TrainerCertification)
                    {
                <span class="enumeration">@trainer.Trainer.FullName</span>
                    }
           
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@Locals["Edit"]</a> |
